@using MuQuiz.Models.Entities
@model Player[]

<dl>
    @{ int counter = 0;}
    @foreach (var item in Model)
    {
        if (counter == 0)
        {
            <dt><h1><i class="em em-@item.AvatarCode"></i> @HttpUtility.HtmlDecode(item.Name) (@item.Score points)<h1></h1></dt>
            counter++;
        }
        else if (counter == 1)
        {
            <dt><h2><i class="em em-@item.AvatarCode"></i> @HttpUtility.HtmlDecode(item.Name) (@item.Score points)</h2></dt>
            counter++;
        }
        else if (counter == 2)
        {
            <dt><h3><i class="em em-@item.AvatarCode"></i> @HttpUtility.HtmlDecode(item.Name) (@item.Score points)</h3></dt>
            counter++;
        }
        else
        {
            <dt><h4><i class="em em-@item.AvatarCode"></i> @HttpUtility.HtmlDecode(item.Name) (@item.Score points)</h4></dt>
        }
    }
</dl>
<br />
<button id="sendsong" class="btn btn-red btn-lg">Next song</button>

<script type="text/javascript">
    $("#sendsong").click(async function () {
        await window.sendSong();
    });

    $("body").removeClass().addClass("results");
</script>