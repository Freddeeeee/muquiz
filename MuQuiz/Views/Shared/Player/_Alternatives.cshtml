@model string[]

<ul>
    @foreach (var item in Model)
    {
        <li><button class="btn btn-primary btn-sm submit" value="@item">Player @item</button></li>
    }
</ul>

<div class="progress">
    <div class="progress-bar"></div>
</div>

<script type="text/javascript">
    let i = 0;

    function loadingTimeBar() {
        i += 1;
        if (i < 100) {
            i = i + 1;
            $(".progress-bar").css("width", i + "%");
        }
        setTimeout("loadingTimeBar()", 100);
    };

    loadingTimeBar();

    $(".submit").click(async function (event) {
        await window.submitAnswer(event.target.value);
    });

    $("body").removeClass().addClass("alternatives");
</script>