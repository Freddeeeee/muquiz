@model PlayerIndexVM

<div class="row vh-100">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4 mx-auto align-self-center">
        <img src="~/css/logo-white.svg" id="muquiz-logo" class="img-fluid" />

        <p><a href="#" id="rules-toggle" data-toggle="collapse" data-target="#rules">How it works &#9660;</a></p>

        <div id="rules" class="collapse">
            <p id="description">When an intro to a song is being played, four alternatives will show on your screen. 
            Press the alternative that you think is the right one. And remember, fast answers are rewarded: extra points goes to those who answers correctly first!
            <br /><br />
            When all intros has been played, you'll see who the winner is...</p>
        </div>

        <form asp-controller="player" asp-action="index">
            <div class="form-group">
                <input placeholder="Enter your name" class="form-control" id="name" asp-for="Name" autofocus />
                <span asp-validation-for="Name"></span>
            </div>

            <button type="submit" class="btn btn-dark btn-lg btn-block">Let's go!</button>
        </form>

        <br />

        @Html.ValidationMessage("AccessError")
        <a class="underline" asp-controller="home" asp-action="index">Join a different game</a>
    </div>
</div>

@section scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("body").addClass("enter_name");
        });

        $("#name").focus();
    </script>
}
